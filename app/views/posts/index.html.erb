<p id="notice"><%= notice %></p>

<h2>投稿された記事一覧</h2>

<%= link_to '記事を投稿', new_post_path %>

<br>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>投稿者</th>
      <th>投稿日時</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.user_id %></td>
        <td><%= post.created_at %></td>
        <td><%= link_to '見る', post %></td>
        <td><%= link_to '編集', edit_post_path(post) %></td>
        <td>
          <% if post.user_id == session[:user_id] %>
            <%= link_to '削除', post, method: :delete, data: { confirm: '削除していいですか？' } %>
          <% else %>
            &nbsp;
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
